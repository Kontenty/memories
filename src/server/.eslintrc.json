{
  "env": {
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "quotes": ["warn", "double"],
    "import/extensions": ["error", "ignorePackages"],
    "comma-dangle": ["error", "only-multiline"],
    "function-paren-newline": 0,
    "implicit-arrow-linebreak": 0,
    "no-param-reassign": ["error", { "props": false }]
  }
}
